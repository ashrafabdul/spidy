				<crawlSequence>1</crawlSequence>
				<fragmentXpath>//section[@id="category-section"]/aside/div</fragmentXpath>
				<fieldXpath>.//h2/a/@href</fieldXpath>
			</page>
		<isCrawlUrl>
				<crawlSequence>5</crawlSequence>
		</isCrawlUrl>
		</field>
		<field>
			<name>mc1_name</name>
